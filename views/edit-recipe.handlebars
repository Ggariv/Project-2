<article>
    <a href="/recipes"> &larr; My Recipes</a>
    <h2>Edit Recipe</h2>
    <form class="edit-recipe">
        <div>
            <input name="recipe-title" type="text" value="{{post.title}}" />
            <span>({{format_url post.post_url}})</span>
        </div>
        <div>
            {{post.vote_count}} {{format_plural "point" post.vote_count}} by you on {{format_date post.created_at}}
            |
            <a href="/recipes/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
        </div>
        <button type="submit">Save post</button>
        <button type="button" class="delete-post-btn">Delete Recipe</button>
    </form>
</article>

<script src="/javascript/add-recipe.js"></script>
<script src="/javascript/delete-recipe.js"></script>
<script src="/javascript/RefTable.js"></script>